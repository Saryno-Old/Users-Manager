{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declarationDir": "dist/@types",
    "target": "ES2020",
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "./dist/module",
    "baseUrl": "./src",
    "incremental": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules/**/*", "test", "dist", "**/*spec.ts"],
}
